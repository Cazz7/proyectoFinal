<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
                         xmlns:form="sap.ui.layout.form">
    <MessageStrip   class="sapUiSmallMarginBottom"
                    text="{i18n>informationStep2}"
                    showIcon="true"/>
    <form:SimpleForm
            editable="true">
        <Label text="{i18n>labelEmployeeName}" required="true"/>
        <Input valueStateText="{i18n>stateEmployeeName}"
                valueState="{/stateEmployeeName}" id="employeeName" liveChange="mandatoryInfoValidation"
                placeholder="{i18n>hintEmployeeName}" value="{/FirstName}"/>
        <Label text="{i18n>labelEmployeeLastname}" required="true"/>
        <Input valueStateText="{i18n>stateEmployeeLastname}"
                valueState="{/stateEmployeeLastname}" id="employeeLastname"
                liveChange="mandatoryInfoValidation" type="Text" placeholder="{i18n>hintEmployeeLastname}"
                value="{/LastName}"/>
        <Label text="{= ${/Type} === '1' ? ${i18n>labelEmployeeCIF} : ${i18n>labelEmployeeDNI} }" required="true" labelFor="employeeDNI"/>
        <Input valueStateText="{i18n>stateEmployeeDNI}"
                valueState="{/stateEmployeeDNI}" id="employeeDNI"
                liveChange="mandatoryInfoValidation" type="Text" placeholder="{i18n>hintEmployeeDNI}"
                value="{/Dni}"/>        
        <Label text="{= ${/Type} === '1' ? ${i18n>labelEmployeeWageAutonomo} : ${i18n>labelEmployeeWageInternos} }" required="false"/>                           
        <!-- Logic for slider depending on type of employee -->                     
        <Slider enableTickmarks="true" id="employeeWageSlider"
          min="{= ${/Type} === '0' ? 12000 : ${/Type} === '1' ? 100 : 50000 }"
          max="{= ${/Type} === '0' ? 50000 : ${/Type} === '1' ? 2000 : 200000 }"
          progress="true" step="{= ${/Type} === '1' ? 100 : 1000 }"  class="sapUiMediumMarginBottom" width="95%"  showAdvancedTooltip="true"
          value="{= ${/Type} === '0' ? 24000 : ${/Type} === '2' ? 70000 : 400 }" />  
        <Label text="{i18n>labelEmployeeEntryDate}" required="true" labelFor="employeeCreationDate"/> 
        <DatePicker id="employeeCreationDate"  dateValue="{/CreationDate}" valueState="{/stateEmployeeEntryDate}" 
        valueStateText="{i18n>stateEmployeeEntryDate}" change="mandatoryInfoValidation" width="30%"/>                                     
    </form:SimpleForm>
</core:FragmentDefinition>